<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="risk_type_view_tree" model="ir.ui.view">
            <field name="name">risk.type.view.tree</field>
            <field name="model">l10n.mx.risk.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="risk_type_view_form" model="ir.ui.view">
            <field name="name">risk.type.view.form</field>
            <field name="model">l10n.mx.risk.type</field>
            <field name="arch" type="xml">
                <form string="Risk type">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                            <group>
                                <field name="code" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="risk_type_action" model="ir.actions.act_window">
            <field name="name">Risk type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n.mx.risk.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent">
                   No records found.
                </p>
            </field>
        </record>

        <menuitem
            id="menu_action_risk_type"
            action="risk_type_action"
            name="Risk type"
            parent="erp_l10n_mx_hr_contract_holidays.menu_disabilities_configuration"
            sequence="20"/>

    </data>
</odoo>