<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="type_considered_view_tree" model="ir.ui.view">
            <field name="name">type.considered.view.tree</field>
            <field name="model">hr.leave.type.considered</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="type_considered_view_form" model="ir.ui.view">
            <field name="name">type.considered.view.form</field>
            <field name="model">hr.leave.type.considered</field>
            <field name="arch" type="xml">
                <form string="It is considered">
                    <sheet>
                        <group>
                            <group>
                                <field name="code" required="1"/>
                            </group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="type_considered_action" model="ir.actions.act_window">
            <field name="name">It is considered</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.leave.type.considered</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent">
                   No records found.
                </p>
            </field>
        </record>

        <menuitem
            id="menu_action_type_considered"
            action="type_considered_action"
            name="It is considered"
            parent="hr_holidays.menu_hr_holidays_configuration"
            sequence="30"/>

    </data>
</odoo>