<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="disability_control_view_tree" model="ir.ui.view">
            <field name="name">disability.control.view.tree</field>
            <field name="model">l10n.mx.disability.control</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="disability_control_view_form" model="ir.ui.view">
            <field name="name">disability.control.view.form</field>
            <field name="model">l10n.mx.disability.control</field>
            <field name="arch" type="xml">
                <form string="Disability Control">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                            <group>
                                <field name="code" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="disability_control_action" model="ir.actions.act_window">
            <field name="name">Disability Control</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n.mx.disability.control</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent">
                   No records found.
                </p>
            </field>
        </record>

        <menuitem
            id="menu_action_disability_control"
            action="disability_control_action"
            name="Disability Control"
            parent="erp_l10n_mx_hr_contract_holidays.menu_disabilities_configuration"
            sequence="40"/>

    </data>
</odoo>