<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_generate_holidays_form" model="ir.ui.view">
            <field name="name">generate.holidays.wizard.form</field>
            <field name="model">generate.holidays.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="state" invisible="1"/>
                        <div class="oe_right" states="choose">
                            <button type="object" name="action_check_apply" string="Check Apply All" icon="fa-check-square-o" class="oe_link"/>
                            <button type="object" name="action_not_check_apply" string="Not Check Apply All" icon="fa-minus-square-o" class="oe_link"/>
                        </div>
                        <field name="holidays_employee_ids" nolabel="1" states="choose">
                            <tree editable="bottom" delete="false" create="false">
                                <field name="apply" widget="toggle_button"/>
                                <field name="contract_id" optional="show" readonly="1"/>
                                <field name="employee_id" optional="show" readonly="1"/>
                                <field name="department_id" optional="show"/>
                                <field name="job_id" optional="show" />
                                <field name="date_start" optional="show" />
                                <field name="l10n_mx_antiquity" optional="show"/>
                                <field name="l10n_mx_holidays" optional="show"/>
                            </tree>
                        </field>
                        <div states="get">
                            <p>Se generaron las Vacaciones con exito, revisar la pesta√±a Vaciones en el contrato del empleado</p>
                        </div>
                    </sheet>
                    <footer>
                        <button name="generate_holidays" string="Generate" type="object" class="oe_highlight" states="choose"/>
                        <button special="cancel" string="Cancel" states="choose"/>
                        <button string="Cerrar" special="cancel" class="oe_link" states="get"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="generate_holidays_action" model="ir.actions.act_window">
            <field name="name">Generate Holidays</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">generate.holidays.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_hr_employee_processes"
                  name="Processes"
                  parent="hr.menu_hr_root"
                  sequence="90"/>

        <menuitem id="generate_holidays_menu"
                  sequence="10" name="Generate Holidays"
                  parent="menu_hr_employee_processes"
                  action="generate_holidays_action"/>

    </data>
</odoo>
