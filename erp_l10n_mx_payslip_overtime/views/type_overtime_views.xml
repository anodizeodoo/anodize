<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="type_overtime_view_tree" model="ir.ui.view">
            <field name="name">type.overtime.view.tree</field>
            <field name="model">hr.type.overtime</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="type_overtime_view_form" model="ir.ui.view">
            <field name="name">type.overtime.view.form</field>
            <field name="model">hr.type.overtime</field>
            <field name="arch" type="xml">
                <form string="Type Overtime">
                    <sheet>
                        <group>
                            <group>
                                <field name="code" required="1"/>
                            </group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="type_overtime_action" model="ir.actions.act_window">
            <field name="name">Type Overtime</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.type.overtime</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent">
                   No records found.
                </p>
            </field>
        </record>

</odoo>
