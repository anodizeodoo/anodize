<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.overtime</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Extra Hours" string="Extra Hours" data-key="erp_l10n_mx_payslip_overtime">
                <h2>Extra Hours</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_extra_hours"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Extra Hours</span>
                            <div class="text-muted">
                                Allows to capture overtime to all employees
                            </div>
                            <div class="content-group">
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_hr_overtime_configuration" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'erp_l10n_mx_payslip_overtime'}</field>
    </record>

</odoo>
