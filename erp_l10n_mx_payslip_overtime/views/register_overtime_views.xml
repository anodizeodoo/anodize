<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="register_overtime_view_tree" model="ir.ui.view">
            <field name="name">register.overtime.view.tree</field>
            <field name="model">hr.register.overtime</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="overtime_type_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="register_overtime_view_form" model="ir.ui.view">
            <field name="name">register.overtime.view.form</field>
            <field name="model">hr.register.overtime</field>
            <field name="arch" type="xml">
                <form string="Register Overtime">
                    <header>
                        <button name="load_contracts" string="Load Contracts"  type="object" class="oe_highlight" states="draft"/>
                        <button name="button_draft" string="Draft"  type="object" class="oe_highlight" states="load,validate"/>
                        <button name="button_validate" string="Validate"  type="object" class="oe_highlight" states="load"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,load,validate"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <label for="date_from" string="Period"/>
                                <div>
                                    <field name="date_from" class="oe_inline" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/> - <field name="date_to" class="oe_inline" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                </div>
                            </group>
                            <group>
                                <field name="overtime_type_id" required="1" options="{'no_create':True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <field name="register_overtime_line_ids" nolabel="1" attrs="{'readonly':[('state', '=', 'validate')]}">
                            <tree editable="bottom" delete="0" create="0">
                                <field name="number"/>
                                <field name="contract_id" readonly="1"/>
                                <field name="employee_id"/>
                                <field name="overtime_type_id" readonly="1"/>
                                <field name="daily_salary"/>
                                <field name="hours_per_day"/>
                                <field name="cost_hour"/>
                                <field name="work_hour"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="register_overtime_action" model="ir.actions.act_window">
            <field name="name">Register Overtime</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.register.overtime</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent">
                   No records found.
                </p>
            </field>
        </record>

        <record id="hr_register_overtime_line_view_tree" model="ir.ui.view">
            <field name="name">hr.register.overtime.line.view.tree</field>
            <field name="model">hr.register.overtime.line</field>
            <field name="arch" type="xml">
                <tree string="Horas extras" delete="0" create="0" edit="0">
                    <field name="name"/>
                    <field name="overtime_type_id"/>
                    <field name="cost_hour"/>
                    <field name="work_hour"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>

</odoo>
