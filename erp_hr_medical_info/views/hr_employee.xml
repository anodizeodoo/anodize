<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.health</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Health" groups="base.group_user">
                    <field name="health_condition_ids">
                        <tree editable="bottom">
                            <field name="type_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"
                            />
                            <field name="severity_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" />
                            <field name="notes" />
                        </tree>

                    </field>
                    <group string='Medical Details'>
                        <field name="blood_type" options="{'no_create': True, 'no_open': True, 'no_edit': True}" />
                        <field name="health_notes" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
