    <!-- Main window action for "hr.employee.health.condition.severity" -->
    <record id="action_hr_employee_health_condition_type_severity_act_window" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">hr employee health condition severity views</field>
        <field name="res_model">hr.employee.health.condition.severity</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="domain">[]</field>
