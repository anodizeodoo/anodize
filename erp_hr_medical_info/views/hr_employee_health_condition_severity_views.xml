        </field>
    </record>

    <!-- Form view for "hr.employee.health.condition.severity" -->
    <record id="view_hr_employee_health_condition_type_form" model="ir.ui.view">
        <field name="name">view.hr.employee.health.condition.severity.form</field>
        <field name="model">hr.employee.health.condition.severity</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="30" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <form string="hr_employee_health_condition_type_form" create="true" delete="true" edit="true">
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" class="oe_inline"
                                placeholder="name" />
                        </h1>
