    <!-- Search view for "hr.employee.health.condition.severity" -->
    <record id="view_hr_employee_health_condition_type_search" model="ir.ui.view">
        <field name="name">view.hr.employee.health.condition.severity.search</field>
        <field name="model">hr.employee.health.condition.severity</field>
        <field name="type">search</field>
        <field name="mode">primary</field>
        <field name="priority" eval="30" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <search string="hr_employee_health_condition_type_search">
