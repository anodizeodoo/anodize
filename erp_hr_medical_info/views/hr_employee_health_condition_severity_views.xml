    <!-- Tree view for "hr.employee.health.condition.severity" -->
    <record id="view_hr_employee_health_condition_type_tree" model="ir.ui.view">
        <field name="name">view.hr.employee.health.condition.severity.tree</field>
        <field name="model">hr.employee.health.condition.severity</field>
        <field name="type">tree</field>
        <field name="mode">primary</field>
        <field name="priority" eval="30" />
        <field name="active" eval="True" />
