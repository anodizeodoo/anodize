<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="modify_salary_view_tree" model="ir.ui.view">
            <field name="name">l10n.mx.modify.salary.tree</field>
            <field name="model">l10n.mx.modify.salary</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="application_date"/>
                    <field name="increment_type_id"/>
                </tree>
            </field>
        </record>

        <record id="view_modify_salary_form" model="ir.ui.view">
            <field name="name">l10n.mx.modify.salary.form</field>
            <field name="model">l10n.mx.modify.salary</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="modify_salary" string="Modify salary"  type="object" class="oe_highlight" states="draft"
                                confirm="¿Está seguro que desea continuar con la modificación de salarios?"
                        />
                        <button name="update_increase" string="Update"  type="object" class="oe_highlight" states="draft"/>
                        <field name="state" invisible="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="application_date" required="1" attrs="{'readonly':[('state', '=', 'modify_salary')]}"/>
                            </group>
                            <group>
                                <field name="increment_type_id" required="1" attrs="{'readonly':[('state', '=', 'modify_salary')]}"/>
                                <field name="label_increase" invisible="1"/>
                                <field name="increase_percent" attrs="{'invisible': [('label_increase', '!=', 'increment_type_02')], 'required': [('label_increase', '=', 'increment_type_02')], 'readonly':[('state', '=', 'modify_salary')]}"/>
                                <field name="increase_amount" attrs="{'invisible': [('label_increase', '!=', 'increment_type_03')], 'required': [('label_increase', '=', 'increment_type_03')], 'readonly':[('state', '=', 'modify_salary')]}"/>
                                <field name="increase_salary" attrs="{'invisible': [('label_increase', '!=', 'increment_type_04')], 'required': [('label_increase', '=', 'increment_type_04')], 'readonly':[('state', '=', 'modify_salary')]}"/>
                            </group>
                        </group>
                        <div class="oe_right">
                            <button type="object" name="action_check_apply" string="Check Apply All" icon="fa-check-square-o" class="oe_link" states="draft"/>
                            <button type="object" name="action_not_check_apply" string="Not Check Apply All" icon="fa-minus-square-o" class="oe_link" states="draft"/>
                        </div>
                        <field name="salary_employee_ids" nolabel="1" attrs="{'readonly':[('state', '=', 'modify_salary')]}">
                            <tree editable="bottom" delete="false" create="false">
                                <field name="apply" widget="toggle_button"/>
                                <field name="contract_id" optional="show" readonly="1"/>
                                <field name="employee_id" optional="show" readonly="1"/>
                                <field name="job_id" optional="show" readonly="1"/>
                                <field name="department_id" optional="show" readonly="1"/>
                                <field name="state" widget="badge" decoration-info="state == 'open'" optional="show"/>
                                <field name="l10n_mx_payroll_daily_salary" optional="show" readonly="1"/>
                                <field name="l10n_mx_payroll_integrated_salary" optional="show" readonly="1"/>
                                <field name="type_salary" optional="show"/>
                                <field name="l10n_mx_date_imss" optional="show"/>
                                <field name="l10n_mx_antiquity" optional="show"/>
                                <field name="l10n_mx_holidays" optional="show"/>
                                <field name="l10n_mx_vacation_bonus" optional="show"/>
                                <field name="l10n_mx_christmas_bonus" optional="show"/>
                                <field name="integration_factor" optional="show" style='color:blue;font-weight:bold;'/>
                                <field name="l10n_mx_payroll_daily_salary_new" optional="show" style='color:blue;font-weight:bold;'/>
                                <field name="l10n_mx_payroll_integrated_salary_new" optional="show" style='color:blue;font-weight:bold;'/>
                                <field name="state_app" widget='badge' decoration-muted="state_app == 'draft'" decoration-success="state_app == 'apply'"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="modify_salary_action" model="ir.actions.act_window">
            <field name="name">Modify salary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n.mx.modify.salary</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent">
                   No records found.
                </p>
            </field>
        </record>

        <menuitem id="menu_hr_payroll_processes"
                  name="Payroll Processes"
                  parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root"
                  sequence="70"/>

        <menuitem id="erp_l10n_mx_modify_salary_menu"
                  sequence="20" name="Modify salary"
                  parent="menu_hr_payroll_processes"
                  action="modify_salary_action"/>

    </data>
</odoo>
