<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="process_finiquito_view_tree" model="ir.ui.view">
            <field name="name">l10n.mx.process.finiquito.tree</field>
            <field name="model">l10n.mx.process.finiquito</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="contract_id"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>

        <record id="view_process_finiquito_form" model="ir.ui.view">
            <field name="name">l10n.mx.process.finiquito.form</field>
            <field name="model">l10n.mx.process.finiquito</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="calculate" string="Calculate"  type="object" class="oe_highlight"/>
                        <button name="generate_payslip" string="Generate Payslip"  type="object" class="oe_highlight"
                            confirm="¿Está seguro que desea generar el Recibo de Nómina?"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="contract_id" required="1" options='{"no_create": True, "no_open": True}'/>
                                <field name="employee_id"/>
                                <field name="department_id"/>
                                <field name="job_id"/>
                                <field name="payslip_id" attrs="{'invisible': [('payslip_id', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="date_start" required="1" string="Date Start"/>
                                <field name="date_end" required="1"/>
                                <field name="time_work"/>
                                <field name="l10n_mx_antiquity" required="1"/>
                                <label for="wage"/>
                                <div class="o_row" name="wage">
                                    <field name="wage" nolabel="1" required="1"/>
                                    <span>/ month</span>
                                </div>
                                <field name="l10n_mx_payroll_daily_salary" required="1" string="Salario Diario"/>
                            </group>
                        </group>
                        <notebook>
							<page string="Generals">
                                <group>
                                    <group>
                                        <field name="l10n_mx_holidays" required="1"/>
                                        <field name="l10n_mx_vacation_bonus" required="1"/>
                                        <field name="l10n_mx_christmas_bonus" required="1"/>
                                    </group>
                                    <group></group>
                                </group>
							</page>
                            <page string="Finiquito">
                                <field name="line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="rule_id" options='{"no_create": True, "no_open": True}' required="1" domain="[('is_finiquito', '=', True)]"/>
                                        <field name="days" required="1"/>
                                        <field name="is_payslip" widget="boolean_toggle"/>
                                        <field name="amount" required="1"/>
                                        <field name="is_amount_payslip"
                                               widget="boolean_toggle"
                                               string="Enviar Importe a Recibo de Nómina"/>
                                    </tree>
                                </field>
                            </page>
						</notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="process_finiquito_action" model="ir.actions.act_window">
            <field name="name">Finiquito</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n.mx.process.finiquito</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent">
                   No records found.
                </p>
            </field>
        </record>

        <menuitem id="erp_l10n_mx_process_finiquito_menu"
                  sequence="60" name="Finiquito"
                  parent="menu_hr_payroll_processes"
                  action="process_finiquito_action"/>

    </data>
</odoo>
