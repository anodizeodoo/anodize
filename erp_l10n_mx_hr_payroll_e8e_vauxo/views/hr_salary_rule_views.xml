<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="hr_salary_rule_view_form_inherit">
        <field name="name">hr.salary.rule.form.inherit</field>
        <field name="model">hr.salary.rule</field>
        <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
        <field name="arch" type="xml">
            <field name="active" position="after">
                <field name="is_finiquito" widget="toggle_button"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_payroll_structure_type_view_form_inherit">
        <field name="name">hr.payroll.structure.type.form.inherit</field>
        <field name="model">hr.payroll.structure.type</field>
        <field name="inherit_id" ref="hr_payroll.hr_payroll_structure_type_view_form"/>
        <field name="arch" type="xml">
            <field name="default_work_entry_type_id" position="after">
                <field name="is_finiquito" widget="toggle_button"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="payslip_cfdi_base_structure_type_view_form_inherit">
        <field name="name">hr.payroll.structure.type.form.inherit</field>
        <field name="model">hr.payroll.structure.type</field>
        <field name="inherit_id" ref="erp_l10n_mx_payslip_cfdi_base.hr_payroll_structure_type_view_form_inherit"/>
        <field name="arch" type="xml">
            <button name="generate_periods" position="attributes">
                <attribute name="attrs">{'invisible': [('is_finiquito', '=', True)]}</attribute>
            </button>
            <page name='periods' position="attributes">
                <attribute name="attrs">{'invisible': [('is_finiquito', '=', True)]}</attribute>
            </page>
        </field>
    </record>

</odoo>
