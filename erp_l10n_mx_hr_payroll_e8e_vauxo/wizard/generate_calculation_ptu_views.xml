<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="generate_calculation_ptu_wizard_form">
        <field name="name">generate.calculation.ptu.wizard.form</field>
        <field name="model">generate.calculation.ptu.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Generate Calculation PTU">
                <sheet>
                    <field name="state" invisible="1"/>
                    <field name="txt_filename" invisible="1"/>
                    <group states="choose">
                        <group>
                            <field name="amount" required="1"/>
                            <field name="struct_id" options="{'no_create': True, 'no_open': True}" required="1"/>
                            <field name="day_year" required="1"/>
                            <field name="is_ptu" required="1"/>
                            <field name="days" required="1"/>
                            <field name="salary" widget="radio" attrs="{'invisible': [('is_ptu', '=', False)]}" required="1"/>
                        </group>
                        <group>
                            <field name="date_year"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="is_accumulated"/>
                            <field name="is_discount_incidents"/>
                        </group>
                    </group>
                    <div states="get">
                        <h2>Generated File</h2>
                        <p>This is your file:
                            <field name="txt_binary" readonly="1" filename="txt_filename"/>
                        </p>
                    </div>
                </sheet>
                <footer states="choose">
                	<button name="generate" string="Generate" type="object" class="oe_highlight" />
                    <button special="cancel" string="Cancel"/>
                </footer>
                <footer states="get">
                    <button string="Close" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_generate_calculation_ptu_wizard">
        <field name="name">Calculation PTU</field>
        <field name="res_model">generate.calculation.ptu.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

   <menuitem id="generate_calculation_ptu_menu"
                  sequence="40" name="Calculation PTU"
                  parent="menu_hr_payroll_processes"
                  action="action_generate_calculation_ptu_wizard"/>
</odoo>
