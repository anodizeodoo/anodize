<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="email_template_payroll" model="mail.template">
            <field name="name">Envio masivo de recibos de nominas</field>
            <field name="email_from">${object.company_id.partner_id.email}</field>
            <field name="subject">Recibo de Nomina</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="reply_to"></field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html"><![CDATA[
                <p>A continuación encontrará adjunto su Recibo de Nominas</p><p>Gracias</p>
        ]]></field>
        </record>
    </data>
</odoo>

