<?xml version='1.0' encoding='utf-8'?>
<odoo>
            <record id="view_massive_payroll_form" model="ir.ui.view">
                <field name="name">form_wizard_massive_payroll</field>
                <field name="model">massive.payroll.wizard</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="Generate txt payroll">
                        <group>                        
                            <field name="masive_payroll_payment_id" invisible="1" />
                            <field name="hr_paylip_run_id" readonly="1"/>
                            <field name="bank_selection" attrs="{'readonly':[('file_generate_bool','!=',False)]}"/>
                            <field name="type_file" attrs="{'readonly':[('file_generate_bool','!=',False)]}"/>
                            <field name="file_generate_bool" invisible="1" />
                            <field name="file_name" invisible="1"/>
                            <field name="file_generate" attrs="{'invisible':[('file_generate_bool','=',False)]}" filename="file_name"/>
                        </group>
                        <footer>
                            <button name="process" string="Process" type="object" class="oe_highlight" attrs="{'invisible':[('file_generate_bool','=',True)]}"/>
                            <button special="cancel" string="Cancel" class="oe_link" default_focus="1"/>
                        </footer>
                    </form>
                </field>
            </record>
            <record model="ir.actions.act_window" id="action_massive_payroll">
                    <field name="name">Generate Massive Payroll</field>
                    <field name="res_model">massive.payroll.wizard</field>
                    <field name="view_mode">form</field>
                    <field name="target">new</field>
            </record>
</odoo>