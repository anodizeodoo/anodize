        <record id="res_bank_alias_form_view_id" model="ir.ui.view">
            <field name="name">res.bank.alias form</field>
            <field name="model">bank.alias</field>
            <field name="arch" type="xml">
                <form string="Clave de Transferencias">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="bank_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="res_bank_alias_tree_view_id" model="ir.ui.view">
            <field name="name">res.bank.alias tree</field>
            <field name="model">bank.alias</field>
            <field name="arch" type="xml">
                <tree string="Clave de Transferencias">
                    <field name="name"/>
                    <field name="bank_id"/>
                </tree>
            </field>
        </record>
        
        <record id="res_bank_alias_view_action_id" model="ir.actions.act_window">
            <field name="name">Clave de Transferencias</field>
            <field name="res_model">bank.alias</field>
            <field name="view_mode">tree,form</field>
        </record>
