<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_bank_inherit_report_view_id" model="ir.ui.view">
            <field name="name">res.bank.form.inherit.layout</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='email']" position="after">
                    <field name="has_report"/>
                </xpath>
                <xpath expr="//group[2]" position="after">
                    <group attrs="{'invisible': [('has_report', '=', False)]}">
                        <notebook>
                            <page name="layout_bank" string="Configuracion de layout bancario">
                                <group>
                                    <field name="code_bank_report"/>
                                    <field name="use_upper_case"/>
                                    <field name="show_columns"/>
                                </group>
                                <field name="layout_configuration_ids" nolabel="1" attrs="{'required': [('has_report', '=', True)]}">
                                    <tree editable="bottom" sample="1">
                                        <field name="sequence" widget="handle"/>
                                        <field name="column_name"/>
                                        <field name="column_length" sum="Total"/>
                                        <field name="fill_column"/>
                                        <field name="fill_using" attrs="{'readonly': [('fill_column', '=', False)]}"/>
                                        <field name="fill_column_left" attrs="{'readonly': [('fill_column', '=', False)]}"/>
                                        <field name="show_decimal"/>
                                        <field name="default_char"/>
                                        <field name="use_default_char" attrs="{'readonly': [('default_char', '=', False)]}"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="alias_bank" string="Clave de Transferencias">
                                <field name="bank_alias_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="code_bank"/>
                                        <field name="bank_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="res_partner_bank_inherit_tree_view_id" model="ir.ui.view">
            <field name="name">res.partner.bank.tree.inherit.layout</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='acc_number']" position="after">
                    <field name="alias_bank"/>
                    <field name="is_bajio" invisible="1"/>
                </xpath>
            </field>
        </record>

