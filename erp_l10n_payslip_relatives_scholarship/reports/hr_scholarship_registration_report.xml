<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
       <record id="hr_scholarship_registration_pdf_report" model="ir.actions.report">
            <field name="name">Report Scholarship</field>
            <field name="model">hr.scholarship.registration.line</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">erp_l10n_payslip_relatives_scholarship.print_employee_scholarship</field>
            <field name="report_file">erp_l10n_payslip_relatives_scholarship.print_employee_scholarship</field>
            <field name="binding_model_id" ref="model_hr_scholarship_registration_line" />
            <field name="binding_type">report</field>
        </record>

        <record id="hr_xlsx_report" model="ir.actions.report">
            <field name="name">Report Scholarship</field>
            <field name="model">hr.scholarship.registration.line</field>
            <field name="report_type">xlsx</field>
            <field name="report_name">erp_l10n_payslip_relatives_scholarship.hr_xlsx_report</field>
            <field name="report_file">hr_xlsx_report</field>
            <field name="binding_model_id" ref="model_hr_scholarship_registration_line" />
            <field name="binding_type">report</field>
        </record>

        <template id="print_employee_scholarship">
            <div t-call="web.html_container">
                <div class="o_account_reports_body">
                    <div class="page">
                        <div t-attf-class="header o_company_#{company_id}_layout" t-att-style="report_header_style">
                            <div class="row">
                                <div class="col-3 mb4">
                                    <img t-if="env.company.logo" t-att-src="image_data_uri(env.company.logo)" style="max-height: 45px;" alt="Logo"/>
                                </div>
                            </div>
                            <div t-if="env.company.logo or env.company.report_header" class="row zero_min_height">
                                <div class="col-12">
                                    <div style="border-bottom: 1px solid black;"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6" name="company_address">
                                    <ul class="list-unstyled">
                                        <li t-if="env.company.is_company_details_empty"><t t-esc="env.company.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/></li>
                                        <li t-else=""><t t-esc="env.company.company_details"/></li>
                                        <li t-if="forced_vat">
                                            <t t-esc="env.company.country_id.vat_label or 'Tax ID'"/>:
                                            <span t-esc="forced_vat"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="o_account_reports_page o_account_reports_no_print">
                             <div class="row">
                                <div class="col-8">
                                    <address class="mb-0" t-field="env.company.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                                    <t t-if="env.company.vat">
                                        VAT: <t t-out="env.company.vat"/>
                                    </t>
                                </div>
                             </div>
                        </div>
                        <h2>Report Scholarship</h2>
                        <table class="table table table-striped">
                            <thead>
                                <th class="text-center" style="width: 25%">Amortization Date</th>
                                <th class="text-center" style="width: 25%">Lote</th>
                                <th class="text-center" style="width: 25%">Number Employee</th>
                                <th class="text-center" style="width: 25%">Employee</th>
                                <th class="text-center" style="width: 25%">Contract</th>
                                <th class="text-center" style="width: 25%">Scholarship</th>
                                <th class="text-center" style="width: 25%">Grade</th>
                                <th class="text-center" style="width: 25%">Qualification</th>
                                <th class="text-center" style="width: 25%">amount</th>
                                <th class="text-center" style="width: 25%">amount2</th>
                                <th class="text-center" style="width: 25%">state</th>
                                <th class="text-center" style="width: 25%">User</th>
                            </thead>
                            <tbody>
                                <t  t-foreach="scholarship" t-as="doc">
                                    <tr>
                                        <td class="text-center" style="width: 25%"><span t-esc="doc['amortization_date']"/></td>
                                        <td class="text-center" style="width: 25%"><span t-esc="doc['lote']"/></td>
                                        <td class="text-center" style="width: 25%"><span t-esc="doc['number_employee']"/></td>
                                        <td class="text-center" style="width: 25%"><span t-esc="doc['employee_id']"/></td>
                                        <td class="text-center" style="width: 25%"><span t-esc="doc['contract_id']"/></td>
                                        <td class="text-center" style="width: 25%"><span t-esc="doc['scholarship_id']"/></td>
                                        <td class="text-center" style="width: 25%"><span t-esc="doc['grade_id']"/></td>
                                        <td class="text-center" style="width: 25%"><span t-esc="doc['qualification']"/></td>
                                        <td class="text-center" style="width: 25%"><span t-esc="doc['amount']"/></td>
                                        <td class="text-center" style="width: 25%"><span t-esc="doc['amount2']"/></td>
                                        <td class="text-center" style="width: 25%"><span t-esc="doc['state']"/></td>
                                        <td class="text-center" style="width: 25%"><span t-esc="doc['create_uid']"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div t-attf-class="footer o_standard_footer o_company_#{env.company.id}_layout">
                            <div class="text-center" style="border-top: 1px solid black;">
                                <ul class="list-inline mb4">
                                    <div t-field="env.company.report_footer"/>
                                </ul>

                                <div t-if="report_type == 'pdf'" class="text-muted">
                                    Page: <span class="page"/> / <span class="topage"/>
                                </div>
                            </div>
                        </div>
                     </div>
                 </div>
                </div>
        </template>
    </data>
</odoo>
