<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_scholarship_registration_wizard_form" model="ir.ui.view">
            <field name="name">hr.scholarship.registration.wizard.form</field>
            <field name="model">hr.scholarship.registration.wizard</field>
            <field name="arch" type="xml">
                <form string="Report Scholarship">
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_export_xls" string="Generate XLS" type="object" class="oe_highlight" />
                        <button name="action_export_pdf" string="Generate PDF" type="object" class="oe_highlight" />
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="hr_scholarship_registration_wizard_act_window" model="ir.actions.act_window">
            <field name="name">Report Scholarship</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.scholarship.registration.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" eval="hr_scholarship_registration_wizard_form"/>
        </record>
    </data>
</odoo>
