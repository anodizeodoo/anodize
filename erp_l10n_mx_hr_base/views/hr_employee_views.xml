<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_tree" model="ir.ui.view">
        <field name="name">hr.employee.tree</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
<!--            <field name="name" position="before">-->
<!--                <field name="registration_number" />-->
<!--            </field>-->
            <xpath expr="//field[@name='work_phone']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <field name="name" position="after">
                <field name="l10n_mx_edi_rfc"/>
                <field name="l10n_mx_edi_curp"/>
                <field name="zip"/>
                <field name="ssnid" string="NSS" optional="show"/>
                <field name="private_email" optional="show"/>
            </field>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_hr_employee_form_inherit_l10n_mx">
        <field name="name">view.hr.employee.form.inherit.l10n_mx</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
<!--            <xpath expr="//page[@name='personal_information']//div[@name='div_km_home_work']" position="after">-->
<!--                <field name="l10n_mx_edi_afore_number"/>-->
<!--            </xpath>-->
<!--            <xpath expr="//page[@name='personal_information']//field[@name='address_home_id']" position="after">-->
<!--                <field name="zip"/>-->
<!--            </xpath>-->
            <xpath expr="//page[@name='personal_information']//field[@name='birthday']" position="after">
                <field name="age"/>
            </xpath>
            <xpath expr="//page[@name='personal_information']//field[@name='marital']" position="before">
                <field name="gender" position="move"/>
            </xpath>
<!--            <xpath expr="//page[@name='personal_information']//group//group[3]" position="before">-->
<!--                <group string="Bank data">-->
<!--                    <field name="filtered_banks" invisible="1"/>-->
<!--                    <field name="bank_id"-->
<!--                           options="{'no_create_edit': True, 'no_create': 1}"-->
<!--                           domain="[('id', 'in', filtered_banks)]"/>-->
<!--                    <field name="bank_account_id"-->
<!--                           options="{'no_create_edit': True, 'no_create': 1}"-->
<!--                           position="move"/>-->
<!--                    <field name="l10n_mx_edi_clabe"/>-->
<!--                </group>-->
<!--            </xpath>-->
            <xpath expr="//page[@name='personal_information']//field[@name='emergency_phone']" position="after">
                <field name="l10n_mx_edi_family_medical_unit"/>
            </xpath>
            <xpath expr="//page[@name='personal_information']//group//group//field[@name='bank_account_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='personal_information']//group//group//div[@name='div_km_home_work']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='personal_information']//group//group//field[@name='private_email']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='personal_information']//group//group//field[@name='phone']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <field name="department_id" position="after">
                <field name="job_id" position="move"/>
            </field>
            <field name="parent_id" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </field>
            <field name="coach_id" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </field>
            <field name="address_id" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </field>
            <field name="address_home_id" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </field>
            <field name="country_id" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </field>
            <field name="resource_calendar_id" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </field>
            <field name="country_of_birth" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </field>
            <field name="user_id" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </field>
            <field name="department_id" position="attributes">
                <attribute name="required">1</attribute>
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </field>
            <field name="job_id" position="attributes">
                <attribute name="required">1</attribute>
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
                <attribute name="domain">[('department_id', 'child_of', department_id)]</attribute>
            </field>
            <field name="category_ids" position="attributes">
                <attribute name="required">1</attribute>
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </field>
<!--            <xpath expr="//div[@id='o_work_employee_main']/group[4]" position="after">-->
<!--                <group string="CFDI">-->
<!--                    -->
<!--                   -->
<!--                </group>-->
<!--            </xpath>-->
            <label for="km_home_work" position="attributes">
                <attribute name="invisible">1</attribute>
            </label>
            <field name="bank_account_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <page name="personal_information" position="after">
                <page string="Datos generales">
                    <group>
                        <group>
                            <field name="l10n_mx_edi_rfc" required="1" />
                            <field name="l10n_mx_edi_curp" required="1" />
                            <field name="zip" required="1"/>
                            <field name="email" string="Correo electrónico"/>
                            <field name="phone_employee" class="o_force_ltr" string="Teléfono"/>
                            <label for="km_home_work"/>
                            <div class="o_row" name="div_km_home_work">
                                <field name="km_home_work" groups="hr.group_hr_user"/>
                                <span>Km</span>
                            </div>
                        </group>
                        <group>
                            <field name="l10n_mx_edi_contract_regime_type_id" options="{'no_create_edit': True, 'no_open': 1, 'no_create': 1}" required="1"/>
                            <field name="l10n_mx_edi_is_assimilated"/>
                            <field name="l10n_mx_edi_syndicated"/>
                            <field name="ssnid" required="1"/>
                            <field name="l10n_mx_edi_afore_number"/>
                            <field name="l10n_mx_edi_employer_registration_id" options="{'no_create_edit': True, 'no_create': 1}" required="1"/>
                            <field name="l10n_mx_edi_risk_rank" options="{'no_create_edit': True, 'no_create': 1}"/>
                            <field name="percentage"/>
                            <field name="l10n_mx_payment_method"/>
                        </group>
                    </group>
                    <group>
                        <group string="Bank data">
<!--                            <field name="filtered_banks" invisible="1"/>-->
                            <field name="bank_id" options="{'no_create_edit': True, 'no_create': 1}"/>
                            <field name="bank_account" attrs="{'readonly': [('bank_id', '=', False)]}"/>
                            <field name="l10n_mx_edi_clabe"/>
                        </group>
                        <group>

                        </group>
                    </group>

                </page>

                <page string="Dirección privada">
<!--                <field name="contact_ids" mode="kanban" context="{'default_parent_id': address_home_id, 'default_type': 'other'}">-->
                <field name="contact_ids" mode="kanban" context="{'default_parent_id': False, 'default_type': 'other'}">
                    <kanban>
                        <field name="id"/>
                        <field name="color"/>
                        <field name="name"/>
                        <field name="title"/>
                        <field name="type"/>
                        <field name="email"/>
                        <field name="parent_id"/>
                        <field name="is_company"/>
                        <field name="function"/>
                        <field name="phone"/>
                        <field name="street"/>
                        <field name="street2"/>
                        <field name="zip"/>
                        <field name="city"/>
                        <field name="country_id"/>
                        <field name="mobile"/>
                        <field name="state_id"/>
                        <field name="image_128"/>
                        <field name="lang"/>
                        <!-- fields in form x2many view to diminish requests -->
                        <field name="comment"/>
                        <field name="display_name"/>
                        <templates>
                            <t t-name="kanban-box">
                                <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                <div t-att-class="color + (record.title.raw_value == 1 ? ' oe_kanban_color_alert' : '') + ' oe_kanban_global_click'">
                                    <div class="o_kanban_image">
                                        <img alt="Contact image" t-if="record.image_128.raw_value" t-att-src="kanban_image('res.partner', 'image_128', record.id.raw_value)"/>
                                        <t t-if="!record.image_128.raw_value">
                                            <img alt="Delivery" t-if="record.type.raw_value === 'delivery'" t-att-src='_s + "/base/static/img/truck.png"'/>
                                            <img alt="Invoice" t-if="record.type.raw_value === 'invoice'" t-att-src='_s + "/base/static/img/money.png"'/>
                                            <t t-if="record.type.raw_value !== 'invoice' &amp;&amp; record.type.raw_value !== 'delivery'">
                                                <img alt="Logo" t-if="record.is_company.raw_value === true" t-att-src='_s + "/base/static/img/company_image.png"'/>
                                                <img alt="Avatar" t-if="record.is_company.raw_value === false" t-att-src='_s + "/base/static/img/avatar_grey.png"'/>
                                            </t>
                                        </t>
                                    </div>
                                    <div class="oe_kanban_details">
                                        <field name="name"/>
                                        <div t-if="record.function.raw_value"><field name="function"/></div>
                                        <div t-if="record.email.raw_value"><field name="email" widget="email"/></div>
                                        <div t-if="record.type.raw_value != 'contact'">
                                            <div>
                                                <field name="zip"/>
                                                <field name="city"/>
                                            </div>
                                            <field t-if="record.state_id.raw_value" name="state_id"/>
                                            <field name="country_id"/>
                                        </div>
                                        <div t-if="record.phone.raw_value">Phone: <t t-esc="record.phone.value"/></div>
                                        <div t-if="record.mobile.raw_value">Mobile: <t t-esc="record.mobile.value"/></div>
                                    </div>
                                </div>
                            </t>
                        </templates>
                    </kanban>
                    <form string="Contact / Address">
                        <sheet>
                            <field name="type" required="1" widget="radio" options="{'horizontal': true}" readonly="1"/>
                            <field name="parent_id" invisible="1"/>
                            <hr/>
                            <group col="12">
                                <group colspan="5">
                                    <field name="name" string="Contact Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
                                    <field name="title" placeholder="e.g. Mr."
                                        attrs="{'invisible': [('type','!=', 'contact')]}"/>
                                    <field name="function" placeholder="e.g. Sales Director"
                                        attrs="{'invisible': [('type','!=', 'contact')]}"/>
                                    <label for="street" string="Address" attrs="{'invisible': [('type','=', 'contact')]}"/>
                                    <div attrs="{'invisible': [('type','=', 'contact')]}">
                                        <div class="o_address_format" name="div_address">
                                            <field name="street" placeholder="Street..." class="o_address_street"/>
                                            <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                            <field name="city" placeholder="City" class="o_address_city"/>
                                            <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                            <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                            <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                        </div>
                                    </div>
                                    <field name="comment" placeholder="Internal notes..."/>
                                </group>
                                <group colspan="5">
                                    <field name="email" widget="email"/>
                                    <field name="phone" widget="phone"/>
                                    <field name="mobile" widget="phone"/>
                                    <field name="company_id" invisible="1"/>
                                </group>
                                <group colspan="1">
                                    <field name="image_1920" widget="image" class="oe_avatar" nolabel="1" options="{'image_preview': 'image_128'}"/>
                                </group>
                            </group>
                            <field name="lang" invisible="True"/>
                            <field name="user_id" invisible="True"/>
                            <field name="image_128" invisible="1"/>
                        </sheet>
                    </form>
                </field>
            </page>
            </page>
        </field>
    </record>

    <record id="view_employee_firstname_form" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_employee_firstname.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="firstname" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
                <field name="lastname" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
                <field name="mobile_phone" position="before">
                    <field name="firstname" position="move"/>
                    <field name="lastname" position="move"/>
                    <field name="lastname2" position="move"/>
                </field>
            </field>
        </record>

        <record id="view_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.firstname.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_employee_lastnames.view_employee_form_inherit"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='lastname2']" position="attributes">
                        <attribute name="required">1</attribute>
                    </xpath>
                </data>
            </field>
        </record>

    <record id="view_employer_registration_form" model="ir.ui.view">
        <field name="name">view.employer.registration.form</field>
        <field name="model">l10n_mx_payroll.employer.registration</field>
        <field name="arch" type="xml">
            <form string="Employer Registration">
                <sheet string="Employer Registration">
                    <group>
                        <group>
                            <field name="date_start" required="1"/>
                            <field name="name"/>
                            <field name="job_risk_id"
                                   options="{'no_create_edit': True, 'no_create': 1}"/>
                            <field name="date_end"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" invisible="1"/>
                                <field name="street_name" placeholder="Street Name..."/>
                                <div class="o_row">
                                    <label for="street_number" class="oe_edit_only"/>
                                    <span> </span>
                                    <field name="street_number"/>
                                    <label for="street_number2" class="oe_edit_only"/>
                                    <field name="street_number2"/>
                                </div>
                                <field name="street2" attrs="{'invisible': [('street2', '=', False)] }"/>
                                <div>
                                    <div class="o_row">
                                        <field name="l10n_mx_edi_colony" placeholder="Colony..."/>
                                        <field name="l10n_mx_edi_colony_code" placeholder="Colony Code..."/>
                                    </div>
                                </div>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state"
                                       placeholder="State" options='{"no_open": True, "no_create_edit": True, "no_create": 1}'/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country"
                                       class="o_address_country" options='{"no_open": True, "no_create": True, "no_create_edit": True}'/>
                            </div>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                   <field name="message_follower_ids" widget="mail_followers"/>
                   <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_employer_registration_tree" model="ir.ui.view">
        <field name="name">view.employer.registration.tree</field>
        <field name="model">l10n_mx_payroll.employer.registration</field>
        <field name="arch" type="xml">
            <tree string="Employer Registration">
                <field name="name"/>
                <field name="job_risk_id"/>
            </tree>
        </field>
    </record>

    <record id="action_update_employee_name" model="ir.actions.server">
            <field name="name">Update employee name</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="binding_model_id" ref="hr.model_hr_employee"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                action = records.action_update_employee_name()
            </field>
        </record>

    <record id="action_employer_registration" model="ir.actions.act_window">
        <field name="name">Employer Registration</field>
        <field name="res_model">l10n_mx_payroll.employer.registration</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="grp_employer_registration" name="Employer Registration" parent="hr.menu_human_resources_configuration"
        sequence="50" action='action_employer_registration'/>

</odoo>
