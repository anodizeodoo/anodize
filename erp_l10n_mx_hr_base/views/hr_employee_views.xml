<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_tree" model="ir.ui.view">
        <field name="name">hr.employee.tree</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="registration_number"/>
            </field>
            <field name="name" position="after">
                <field name="l10n_mx_edi_rfc"/>
                <field name="l10n_mx_edi_curp"/>
                <field name="zip"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_hr_employee_form_inherit_l10n_mx">
        <field name="name">view.hr.employee.form.inherit.l10n_mx</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="before">
                <group string="InformaciÃ³n Fiscal" name="mx_info">
                    <group>
                        <field name="ssnid" required="1"/>
                        <field name="l10n_mx_edi_is_assimilated"/>
                        <field name="l10n_mx_edi_contract_regime_type_id" options="{'no_open': 1, 'no_create': 1}" required="1"/>
                        <field name="l10n_mx_payment_method"/>
                    </group>
                    <group>
                        <field name="l10n_mx_edi_employer_registration_id" required="1"/>
                        <field name="l10n_mx_edi_risk_rank"/>
                        <field name="l10n_mx_edi_syndicated"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//page[@name='personal_information']//div[@name='div_km_home_work']" position="after">
                <field name="l10n_mx_edi_rfc" required="1" force_save="1"/>
                <field name="l10n_mx_edi_curp" required="1" force_save="1"/>
                <field name="l10n_mx_edi_afore_number"/>
            </xpath>
            <xpath expr="//page[@name='personal_information']//field[@name='address_home_id']" position="after">
                <field name="zip"/>
            </xpath>
            <xpath expr="//page[@name='personal_information']//field[@name='birthday']" position="after">
                <field name="age"/>
            </xpath>
            <xpath expr="//page[@name='personal_information']//field[@name='marital']" position="before">
                <field name="gender" position="move"/>
            </xpath>
            <xpath expr="//page[@name='personal_information']//group//group[3]" position="before">
                <group string="Bank data">
                    <field name="filtered_banks" invisible="1"/>
                    <field name="bank_id" domain="[('id', 'in', filtered_banks)]"/>
                    <field name="bank_account_id" position="move"/>
                    <field name="l10n_mx_edi_clabe"/>
                </group>
            </xpath>
            <xpath expr="//page[@name='personal_information']//field[@name='emergency_phone']" position="after">
                <field name="l10n_mx_edi_family_medical_unit"/>
            </xpath>
            <xpath expr="//page[@name='personal_information']//group//group//field[@name='bank_account_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <field name="department_id" position="after">
                <field name="job_id" position="move"/>
            </field>
            <field name="department_id" position="attributes">
                <attribute name="required">1</attribute>
            </field>
            <field name="job_id" position="attributes">
                <attribute name="required">1</attribute>
            </field>
<!--            <xpath expr="//div[@id='o_work_employee_main']/group[4]" position="after">-->
<!--                <group string="CFDI">-->
<!--                    -->
<!--                   -->
<!--                </group>-->
<!--            </xpath>-->
        </field>
    </record>

    <record id="view_employee_firstname_form" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_employee_firstname.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="firstname" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
                <field name="lastname" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
                <field name="mobile_phone" position="before">
                    <field name="firstname" position="move"/>
                    <field name="lastname" position="move"/>
                    <field name="lastname2" position="move"/>
                </field>
            </field>
        </record>

        <record id="view_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.firstname.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_employee_lastnames.view_employee_form_inherit"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='lastname2']" position="attributes">
                        <attribute name="required">1</attribute>
                    </xpath>
                </data>
            </field>
        </record>

    <record id="view_employer_registration_form" model="ir.ui.view">
        <field name="name">view.employer.registration.form</field>
        <field name="model">l10n_mx_payroll.employer.registration</field>
        <field name="arch" type="xml">
            <form string="Employer Registration">
                <sheet string="Employer Registration">
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="job_risk_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                   <field name="message_follower_ids" widget="mail_followers"/>
                   <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_employer_registration_tree" model="ir.ui.view">
        <field name="name">view.employer.registration.tree</field>
        <field name="model">l10n_mx_payroll.employer.registration</field>
        <field name="arch" type="xml">
            <tree string="Employer Registration">
                <field name="name"/>
                <field name="job_risk_id"/>
            </tree>
        </field>
    </record>

    <record id="action_update_employee_name" model="ir.actions.server">
            <field name="name">Update employee name</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="binding_model_id" ref="hr.model_hr_employee"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                action = records.action_update_employee_name()
            </field>
        </record>

    <record id="action_employer_registration" model="ir.actions.act_window">
        <field name="name">Employer Registration</field>
        <field name="res_model">l10n_mx_payroll.employer.registration</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="grp_employer_registration" name="Employer Registration" parent="hr.menu_human_resources_configuration"
        sequence="50" action='action_employer_registration'/>

</odoo>
