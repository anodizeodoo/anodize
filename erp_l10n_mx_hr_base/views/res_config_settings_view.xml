<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hr_payroll_localization']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" title="The parameters to configure the Payroll Stamped version.">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Daily Salary Generation (SD)</span>
                        <div class="text-muted">
                            Allows you to calculate the following options
                        </div>
                        <div class="content-group">
                            <div class="row" style="margin-left:10px;">
                                <field name="l10n_mx_daily_salary_calculation" widget="radio"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box" title="Fields required to configure the MX CFDI.">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Employer Registry</span>
                        <div class="text-muted">
                            Configure your SAT Employer Registry.
                        </div>
                        <div class="row mt16">
                            <label for="l10n_mx_edi_employer_registration_id" class="col-lg-3 o_light_label"/>
                            <field name="l10n_mx_edi_employer_registration_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
