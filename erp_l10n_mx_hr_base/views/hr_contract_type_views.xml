<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="contract_type_view_search" model="ir.ui.view">
            <field name="name">hr.contract.type.view.search</field>
            <field name="model">l10n.mx.payroll.contract.type</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>

        <record id="contract_type_view_tree" model="ir.ui.view">
            <field name="name">hr.contract.type.tree</field>
            <field name="model">l10n.mx.payroll.contract.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="view_contract_type_form" model="ir.ui.view">
            <field name="name">hr.contract.type.form</field>
            <field name="model">l10n.mx.payroll.contract.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                            <group>
                                <field name="code" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_contract_type_action" model="ir.actions.act_window">
            <field name="name">Contract type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n.mx.payroll.contract.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent">
                   No records found.
                </p>
            </field>
        </record>

         <menuitem
                id="menu_config_contract_catalogs"
                name="Contract"
                parent="hr.menu_human_resources_configuration"
                groups="hr.group_hr_manager"
                sequence="4"/>

        <menuitem id="erp_l10n_mx_hr_contract_type_menu"
                  sequence="5" name="Contract type"
                  parent="erp_l10n_mx_hr_base.menu_config_contract_catalogs"
                  action="erp_l10n_mx_hr_base.hr_contract_type_action"/>

    </data>
</odoo>
