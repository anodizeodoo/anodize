<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="job_risk_view_search" model="ir.ui.view">
            <field name="name">job.risk.view.search</field>
            <field name="model">l10n_mx_edi.job.risk</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>

        <record id="contract_regime_type_view_tree" model="ir.ui.view">
            <field name="name">jos.risk.type.tree</field>
            <field name="model">l10n_mx_edi.job.risk</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="percentage"/>
                </tree>
            </field>
        </record>

        <record id="view_job_risk_form" model="ir.ui.view">
            <field name="name">job.risk.form</field>
            <field name="model">l10n_mx_edi.job.risk</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="code" required="1"/>
                                <field name="name" required="1"/>
                            </group>
                            <group>
                                <field name="percentage" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="job_risk_action" model="ir.actions.act_window">
            <field name="name">Job Risk</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n_mx_edi.job.risk</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent">
                   No records found.
                </p>
            </field>
        </record>


        <menuitem id="erp_l10n_mx_hr_job_risk_menu"
                  sequence="35" name="Job Risk"
                  parent="hr.menu_config_employee"
                  action="erp_l10n_mx_hr_base.job_risk_action"/>

    </data>
</odoo>
