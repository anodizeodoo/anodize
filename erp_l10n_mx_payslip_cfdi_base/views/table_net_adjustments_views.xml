<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="table_net_adjustments_view_tree" model="ir.ui.view">
            <field name="name">table.net.adjustments.view.tree</field>
            <field name="model">l10n.mx.table.net.adjustments</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="year"/>
                    <field name="struct_ids" widget='many2many_tags'/>
                    <field name="rounding"/>
                    <field name="profit_account_id"/>
                    <field name="loss_account_id"/>
                </tree>
            </field>
        </record>

        <record id="table_net_adjustments_view_form" model="ir.ui.view">
            <field name="name">table.net.adjustments.view.form</field>
            <field name="model">l10n.mx.table.net.adjustments</field>
            <field name="arch" type="xml">
                <form string="Tabla Ajustes al Neto">
                    <sheet>
                        <group>
                            <group>
                                <field name="year" required="1"/>
                                <field name="code" required="1"/>
                                <field name="name" required="1"/>
                                <field name="rounding" required="1"/>
                                <field name="strategy" required="1"/>
                            </group>
                            <group>
                                <field name="struct_ids" widget='many2many_tags' required="1"/>
                                <field name="profit_account_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="loss_account_id" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="table_net_adjustments_action" model="ir.actions.act_window">
            <field name="name">Ajustes al Neto</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n.mx.table.net.adjustments</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent">
                   No records found.
                </p>
            </field>
        </record>

        <menuitem
            id="menu_action_table_net_adjustments"
            action="table_net_adjustments_action"
            name="Ajustes al Neto"
            parent="erp_l10n_mx_hr_contract_holidays.menu_table_configuration"
            sequence="40"/>

    </data>
</odoo>