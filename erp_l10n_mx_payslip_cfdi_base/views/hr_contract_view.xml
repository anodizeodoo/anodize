<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_hr_payroll_contract_form_inherit_l10n_mx_pays">
        <field name="name">view.hr.contract.form.inherit.l10n_mx</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="erp_l10n_mx_hr_base.view_hr_payroll_contract_form_inherit_l10n_mx"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_mx_payroll_sdi_variable']" position="after">
                <field name="l10n_mx_sdi_total"/>
            </xpath>
        </field>
    </record>

    <record id="hr_contract_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_payroll_account.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <field name="analytic_account_id" position="replace"/>
            <xpath expr="//page[last()]" position="after">
                <page string="Contabilidad">
                    <group>
                        <group string="Contabilidad">
                            <field name="analytic_account_id" position="move"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_hr_contract_form_inherit">
        <field name="name">view.hr.contract.form.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="open_net_adjustments_view"
                        class="oe_stat_button"
                        icon="fa-calendar"
                        type="object"
                        >
                    Ajustes al Neto
                </button>
            </div>
        </field>
    </record>

    <record id="hr_contract_net_adjustments_view_tree" model="ir.ui.view">
        <field name="name">hr.contract.net.adjustments.view.tree</field>
        <field name="model">hr.contract.net.adjustments</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="payslip_id"/>
                <field name="amount" sum="TOTAL"/>
                <field name="struct_id"/>
                <field name="contract_id" invisible="1"/>
            </tree>
        </field>
    </record>

