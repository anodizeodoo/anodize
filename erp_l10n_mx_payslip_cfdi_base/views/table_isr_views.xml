<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="table_isr_view_tree" model="ir.ui.view">
            <field name="name">table.isr.view.tree</field>
            <field name="model">l10n.mx.table.isr</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="l10n_mx_isr_name"/>
                    <field name="l10n_mx_isr_type"/>
                    <field name="l10n_mx_isr_year"/>
                </tree>
            </field>
        </record>

        <record id="table_isr_view_form" model="ir.ui.view">
            <field name="name">table.isr.view.form</field>
            <field name="model">l10n.mx.table.isr</field>
            <field name="arch" type="xml">
                <form string="Table ISR">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="l10n_mx_isr_name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="l10n_mx_isr_type" required="1"/>
                            </group>
                            <group>
                                <field name="l10n_mx_isr_year" required="1"/>
                            </group>
                        </group>
                        <group string="Rate ISR">
                            <field name="l10n_mx_isr_rate_ids" nolabel="1">
                                <tree editable="bottom" default_order="l10n_mx_isr_rate_percentage,id">
                                    <field name="l10n_mx_isr_rate_lower_limit"/>
                                    <field name="l10n_mx_isr_rate_upper_limit"/>
                                    <field name="l10n_mx_isr_rate_fixed_fee"/>
                                    <field name="l10n_mx_isr_rate_percentage"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Subsidy Rate">
                            <field name="l10n_mx_isr_subsidy_rate_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="l10n_mx_isr_subsidy_income_from"/>
                                    <field name="l10n_mx_isr_subsidy_income_of"/>
                                    <field name="l10n_mx_isr_subsidy_quantity"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="table_isr_action" model="ir.actions.act_window">
            <field name="name">ISR</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n.mx.table.isr</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent">
                   No records found.
                </p>
            </field>
        </record>

        <menuitem
            id="menu_action_table_isr"
            action="table_isr_action"
            name="ISR"
            parent="erp_l10n_mx_hr_contract_holidays.menu_table_configuration"
            sequence="20"/>

    </data>
</odoo>