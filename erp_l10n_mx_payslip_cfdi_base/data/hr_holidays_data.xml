        <field name="validity_start" eval="time.strftime('%Y-01-01')"/>
        <field name="work_entry_type_id" ref="hr_payroll.work_entry_type_leave"/>
    </record>
    <record id="mexican_licencia_sin_goce" model="hr.leave.type">
        <field name="name" eval="'Licencia sin goce de salario'"/>
