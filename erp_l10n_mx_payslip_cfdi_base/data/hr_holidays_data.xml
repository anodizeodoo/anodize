<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Holiday -->
    <record id="hr_payroll.work_entry_type_legal_leave" model="hr.work.entry.type">
        <field name="name" eval="'Vacaciones'"/>
    </record>
    <record id="hr_payroll.work_entry_type_sick_leave" model="hr.work.entry.type">
        <field name="name" eval="'Incapacidad'"/>
    </record>
    <record id="hr_payroll.work_entry_type_unpaid_leave" model="hr.work.entry.type">
        <field name="name" eval="'Ausentismo'"/>
    </record>
    <record id="hr_payroll.work_entry_type_leave" model="hr.work.entry.type">
        <field name="name" eval="'Permiso'"/>
    </record>
    <record id="mexican_holiday" model="hr.leave.type">
        <field name="name" eval="'Vacaciones'"/>
        <field name="allocation_type">fixed</field>
        <field name="color_name">black</field>
        <field name="validity_start" eval="time.strftime('%Y-01-01')"/>
        <field name="work_entry_type_id" ref="hr_payroll.work_entry_type_legal_leave"/>
    </record>
    <record id="mexican_maternity" model="hr.leave.type">
