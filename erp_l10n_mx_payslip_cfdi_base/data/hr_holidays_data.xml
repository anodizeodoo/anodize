        <field name="allocation_type">fixed</field>
        <field name="color_name">black</field>
        <field name="validity_start" eval="time.strftime('%Y-01-01')"/>
        <field name="work_entry_type_id" ref="hr_payroll.work_entry_type_sick_leave"/>
    </record>
    <record id="mexican_faltas_injustificadas" model="hr.leave.type">
        <field name="name" eval="'Falta injustificada'"/>
