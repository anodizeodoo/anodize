<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="generate_report_wizard_form">
        <field name="name">generate.report.wizard.form</field>
        <field name="model">generate.report.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="General Payroll Report">
                <sheet>
                    <field name="state" invisible="1"/>
                    <field name="txt_filename" invisible="1"/>
                    <group states="choose">
                        <group>
                            <field name="date_start" required="1"/>
                            <field name="date_end" required="1"/>
                            <field name="employer_registration_ids" options="{'no_create': True, 'no_create_edit': True}" widget='many2many_tags' required="context.get('from_report') != 'percept_deduct'"/>
                            <field name="struct_id" options="{'no_create': True, 'no_create_edit': True}" required="context.get('from_report') == 'payroll'" invisible="context.get('from_report') == 'percept_deduct'"/>
                            <field name="struct_ids" widget='many2many_tags' options="{'no_create': True, 'no_create_edit': True}" required="context.get('from_report') == 'percept_deduct'" invisible="context.get('from_report') != 'percept_deduct'"/>
                            <field name="l10n_mx_edi_payment_method_ids" widget='many2many_tags' options="{'no_create': True, 'no_create_edit': True}" invisible="context.get('from_report') != 'receipt'"/>
                            <field name="stamped_receipts" invisible="context.get('from_report') != 'percept_deduct'" required="context.get('from_report') == 'percept_deduct'"/>
                        </group>
                        <group>
                            <field name="department_start_id" options="{'no_create': True, 'no_create_edit': True}" required="context.get('from_report') == 'payroll'"/>
                            <field name="department_end_id" options="{'no_create': True, 'no_create_edit': True}" required="context.get('from_report') == 'payroll'"/>
                            <field name="employee_start_id" options="{'no_create': True, 'no_create_edit': True}" required="context.get('from_report') == 'payroll'"/>
                            <field name="employee_end_id" options="{'no_create': True, 'no_create_edit': True}" required="context.get('from_report') == 'payroll'"/>
                        </group>
                    </group>
                    <div states="get">
                        <h2>Generated File</h2>
                        <p>This is your file:
                            <field name="txt_binary" readonly="1" filename="txt_filename"/>
                        </p>
                    </div>
                </sheet>
                <footer states="choose">
                	<button name="generate_file" string="Generate" type="object" class="oe_highlight" invisible="context.get('from_report') != 'payroll'"/>
                    <button name="generate_xls" string="Generate" type="object" class="oe_highlight" invisible="context.get('from_report') != 'percept_deduct'"/>
                    <button name="generate_pdf" string="Generate" type="object" class="oe_highlight" invisible="context.get('from_report') != 'receipt'"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
                <footer states="get">
                    <button string="Close" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_generate_report_wizard">
        <field name="name">General Payroll Report</field>
        <field name="res_model">generate.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="context">{'from_report': 'payroll'}</field>
        <field name="view_id" ref="generate_report_wizard_form"/>
        <field name="target">new</field>
    </record>

    <record model="ir.actions.act_window" id="action_perceptions_deductions_report_wizard">
        <field name="name">Perceptions and Deductions Report</field>
        <field name="res_model">generate.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="context">{'from_report': 'percept_deduct'}</field>
        <field name="view_id" ref="generate_report_wizard_form"/>
        <field name="target">new</field>
    </record>

    <record model="ir.actions.act_window" id="action_receipt_printing_report_wizard">
        <field name="name">Receipt Printing</field>
        <field name="res_model">generate.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="context">{'from_report': 'receipt'}</field>
        <field name="view_id" ref="generate_report_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_generate_report_wizard"
        action="action_generate_report_wizard"
        parent="hr_payroll.menu_hr_payroll_report"
        sequence="60"
    />

    <menuitem
        id="menu_perceptions_deductions_report_wizard"
        action="action_perceptions_deductions_report_wizard"
        parent="hr_payroll.menu_hr_payroll_report"
        sequence="65"
    />

    <menuitem
        name="Receipt"
        id="menu_receipt_report_wizard"
        parent="hr_payroll.menu_hr_payroll_report"
        sequence="80"
    />

    <menuitem
        id="menu_receipt_printing_report_wizard"
        action="action_receipt_printing_report_wizard"
        parent="menu_receipt_report_wizard"
        sequence="10"
    />

</odoo>
