<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="erp_fump_hr_contract_fump_view_form" model="ir.ui.view">
        <field name="name">erp.fump.hr.contract.fump.view.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <button name="btn_change" string="Confirmar ModificaciÃ³n"
                        attrs="{'invisible':[('confirm_movement','!=',True)]}"
                        type="object"  class="oe_highlight"/>
            </field>
            <field name="hr_responsible_id" position="after">
                <field name="confirm_movement" invisible="0" widget="boolean_toggle"/>
                <field name="fump_ids" invisible="1"/>
                <field name="last_fump_id" invisible="1"/>
            </field>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_fump" type="object" class="oe_stat_button"
                    icon="fa-cogs" attrs="{'invisible': [('fump_ids', '=', [])]}" string="Movimientos">
<!--                    <field name="fump_count" widget="statinfo" string="Movimientos" />-->
                </button>
            </xpath>
        </field>
    </record>
</odoo>
