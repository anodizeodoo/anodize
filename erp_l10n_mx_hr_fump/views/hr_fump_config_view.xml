<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>
    <!-- Fump Movement Type -->

        <record id="erp_view_hr_fump_movement_type_form" model="ir.ui.view">
            <field name="name">ERP Fump Movement Type</field>
            <field name="model">hr.fump.movement.type</field>
            <field name="arch" type="xml">
                <form string="Fump Movement Type">
                   <sheet>
                       <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object"
                                    class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                    options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                       <group colspan="4" col="4">
                           <field name="name" colspan="2"/>
                           <field name="type"/>
                           <field name="movement_type"/>
                           <field name="reason"/>
                       </group>
                       <group string="Description"><field name="description" colspan="4" nolabel="1"/></group>
                   </sheet>
               </form>
          </field>
        </record>

        <record id="erp_view_hr_fump_movement_type_tree" model="ir.ui.view">
			<field name="name">ERP Fump Movement Type</field>
			<field name="model">hr.fump.movement.type</field>
			<field name="arch" type="xml">
				<tree string="Movement Type" >
					<field name="name" />
					<field name="description" />
                    <field name="reason"/>
                    <field name="active"/>
				</tree>
			</field>
		</record>

		<record id="view_hr_fump_movement_type_search" model="ir.ui.view">
			<field name="name">ERP Fump Movement Type</field>
			<field name="model">hr.fump.movement.type</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Movement Type search">
					<group>
						<field name="name" />
                        <field name="description" />
                        <field name="reason"/>
					</group>
				</search>
			</field>
		</record>

		<record id="action_hr_fump_movement_type" model="ir.actions.act_window">
			<field name="name">Tipo de Movimiento</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.fump.movement.type</field>
            <field name="view_mode">tree,form</field>
		</record>


    </data>
</odoo>
