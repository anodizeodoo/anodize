<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="loan_type_view_search" model="ir.ui.view">
            <field name="name">loan.type.view.search</field>
            <field name="model">l10n.mx.loan.type</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>

        <record id="loan_type_view_tree" model="ir.ui.view">
            <field name="name">loan.type.tree</field>
            <field name="model">l10n.mx.loan.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="rule_id"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_loan_type_form" model="ir.ui.view">
            <field name="name">loan.type.form</field>
            <field name="model">l10n.mx.loan.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="code" required="1"/>
                            </group>
                            <group>
                                <field name="rule_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="loan_type_action" model="ir.actions.act_window">
            <field name="name">Loan type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n.mx.loan.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent">
                   No records found.
                </p>
            </field>
        </record>

         <menuitem
                id="menu_config_loan_catalogs"
                name="Loan"
                parent="hr.menu_human_resources_configuration"
                groups="hr.group_hr_manager"
                sequence="5"/>

        <menuitem id="erp_l10n_mx_loan_type_menu"
                  sequence="5" name="Loan type"
                  parent="erp_l10n_mx_hr_loan.menu_config_loan_catalogs"
                  action="erp_l10n_mx_hr_loan.loan_type_action"/>

    </data>
</odoo>
