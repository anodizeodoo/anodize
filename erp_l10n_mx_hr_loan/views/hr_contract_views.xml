    <record id="view_l10n_mx_loan_form" model="ir.ui.view">
        <field name="name">view.l10n_mx.loan.form</field>
        <field name="model">hr.employee.loan</field>
        <field name="arch" type="xml">
            <form string="Loans">
                <sheet string="Loan">
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <group>
                            <field name="loan_type_id" required="1" options='{"no_create": True, "no_open": True}'/>
                            <field name="date_start" required="1"/>
                            <field name="date_end" required="1"/>
                            <field name="name" required="1"/>
                            <field name="contract_id"
                                   options="{'no_edit': True, 'no_create_edit': True, 'no_create': 1}"/>
                            <field name="company_currency_id" invisible="1"/>
                            <field name="credit_amount" required="1"/>
                        </group>
                        <group>
                            <field name="monthly_withhold" required="1"/>
                            <field name="payment_term" required="1"/>
                            <field name="payments_other_employers"/>
                            <field name="accumulated_amount_withheld" required="1"/>
                            <field name="residue"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_l10n_mx_loan_tree" model="ir.ui.view">
        <field name="name">view.l10n_mx.loan.tree</field>
        <field name="model">hr.employee.loan</field>
        <field name="arch" type="xml">
            <tree string="Loan">
                <field name="employee_id"/>
                <field name="contract_id"/>
                <field name="loan_type_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="name"/>
                <field name="company_currency_id" invisible="1"/>
                <field name="credit_amount"/>
                <field name="monthly_withhold"/>
                <field name="payment_term"/>
                <field name="payments_other_employers"/>
                <field name="accumulated_amount_withheld"/>
                <field name="residue"/>
                <field name="amount_total"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="action_l10n_mx_loan_method" model="ir.actions.act_window">
        <field name="name">Loan</field>
        <field name="res_model">hr.employee.loan</field>
        <field name="view_mode">tree,form</field>
    </record>

