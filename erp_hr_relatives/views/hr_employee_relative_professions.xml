<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="employee_relative_professions_form" model="ir.ui.view">
        <field name="name">hr.employee.relative.professions.form</field>
        <field name="model">hr.employee.relative.professions</field>
        <field name="arch" type="xml">
            <form string="Profesiones">
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active" widget="boolean_toggle"/>
                </group>
            </form>
        </field>
    </record>

    <record id="employee_relative_professions_search" model="ir.ui.view">
        <field name="name">hr.employee.relative.professions.search</field>
        <field name="model">hr.employee.relative.professions</field>
        <field name="arch" type="xml">
            <search string="Profesiones">
                <field name="name" string="Título"/>
                <field name="code" string="Título"/>
            </search>
        </field>
    </record>

    <record id="employee_relative_professions_list" model="ir.ui.view">
        <field name="name">hr.employee.relative.professions.list</field>
        <field name="model">hr.employee.relative.professions</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Profesiones">
                <field name="name"/>
                <field name="code"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="open_employee_relative_professions_action" model="ir.actions.act_window">
        <field name="name">Profesiones</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee.relative.professions</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
